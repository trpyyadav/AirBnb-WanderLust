<% layout('/layouts/boilerplate') -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Listing Details </h3>
        </div>
    
    
    <div class="card col-6 offset-3">
        <img src="<%= listing.image %>" class="card-img-top show-img offset-4" alt="listing_img">
        <div class="card-body offset-4">
            <p class="card-text offset-4">
                <b><%= listing.title %></b><br>
                <%= listing.description %> <br>
                &#x20B9 <%= listing.price.toLocaleString("en-IN") %> /night<br>
                <%= listing.location %> <br>
                <%= listing.country %>
            </p>
        </div>
    </div>




    <div class="col-8 btns mb-5">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn edit-btn-1">EDIT</a>
    <br><br>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark offset-5">DELETE</button>
    </form>
    </div>
    

</div>
</body>
