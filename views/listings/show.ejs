<% layout('/layouts/boilerplate') -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3><%= listing.title %> </h3>
        </div>
    
    
    <div class="card col-6 offset-3 listing-card">
        <img src="<%= listing.image %>" class="card-img-top show-img offset-4" alt="listing_img">
        <div class="card-body offset-4">
            <p class="card-text offset-4">
                <%= listing.description %> <br>
                &#x20B9 <%= listing.price.toLocaleString("en-IN") %> /night<br>
                <%= listing.location %> <br>
                <%= listing.country %>
            </p>
        </div>
    </div>




    <div class="col-8 btns mb-3">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn edit-btn-1">EDIT</a>
    <br><br>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark offset-5">DELETE</button>
    </form>
    </div>

    
    <div class="col-8 offset-2 mb-3">
        <hr>
        <h4>Leave a Comment</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" id="rating" min="1" max="5" name="review[rating]" class="form-range">
            </div>

            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                <div class="invalid-feedback">Please add some comments for review.</div>
            </div>

            <button class="btn btn-outline-success">Submit</button>
        </form>

        <hr>
        <h4>All Reviews</h4>
        <div class="row">
        <% for(review of listing.reviews) { %>
                <div class="card col-5 mb-3 ms-3">
                    <div class="card-body pt-3 ps-3">
                        <h5 class="card-title">Priyanshu</h5>
                        <p class="card-text"><%= review.comment %></p>
                        <!-- <p class="card-text"><%= review.rating %> &#x2606</p> -->
                        <p class="card-text">
                            <%= review.rating %>
                            <% for(let i=1; i<= review.rating; i++) { %>
                                &#9733
                                <% } %>
                        </p>
                    </div>
                    <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-3">
                        <button class="btn btn-sm btn-dark">Delete</button>
                    </form>
                </div>
        <% } %>
    </div>

    </div>
    

</div>
</body>
